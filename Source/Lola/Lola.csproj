<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>Lola</RootNamespace>
    <AssemblyName>lola</AssemblyName>
    <AssemblyTitle>Lola</AssemblyTitle>
    <Authors>Andre Vianna</Authors>
    <Company>D0tN3tC0d3r5</Company>
    <Copyright>© Andre Vianna 2024</Copyright>
    <Description>AI-Assisted Workflow Management</Description>
    <InformationalVersion>0.1.alpha</InformationalVersion>
    <AssemblyVersion>0.1.*</AssemblyVersion>
    <Deterministic>false</Deterministic>
    <NoWarn>$(NoWarn);DV2001;DV2002;CS7035</NoWarn>
    <UserSecretsId>0453e4b5-0554-42b5-a904-36f2e1ea3686</UserSecretsId>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Lola.snk</AssemblyOriginatorKeyFile>
    <ApplicationIcon>lola.ico</ApplicationIcon>
    <ErrorReport>none</ErrorReport>
    <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>full</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="lola.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.0-rc.1.24431.7" />
    <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" Version="9.0.0-rc.1.24431.7" />
    <PackageReference Include="Serilog" Version="4.0.1" />
    <PackageReference Include="Serilog.Extensions.Logging" Version="8.0.0" />
    <PackageReference Include="Serilog.Settings.Configuration" Version="8.0.2" />
    <PackageReference Include="Serilog.Sinks.Console" Version="6.0.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="6.0.0" />
    <PackageReference Include="DotNetToolbox.AI" Version="9.0.0-alpha1" />
    <PackageReference Include="DotNetToolbox.AI.Anthropic" Version="9.0.0-alpha1" />
    <PackageReference Include="DotNetToolbox.AI.OpenAI" Version="9.0.0-alpha1" />
    <PackageReference Include="DotNetToolbox.Console" Version="9.0.0-alpha1" />
    <PackageReference Include="DotNetToolbox.Data" Version="9.0.0-alpha1" />
    <PackageReference Include="DotNetToolbox.Data.File" Version="9.0.0-alpha1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="data\personas.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="data\users.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="data\tasks.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="saved\" />
  </ItemGroup>

  <ProjectExtensions>
    <VisualStudio>
      <UserProperties data_4tasks_1json__JsonSchema="" />
    </VisualStudio>
  </ProjectExtensions>

</Project>
